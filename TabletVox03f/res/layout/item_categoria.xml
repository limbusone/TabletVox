<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dip" >

    <ImageView 
        android:id="@+id/imgItem"
	    android:layout_width="58dp"
	    android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"	    
	    android:contentDescription="@string/blabla"
	    android:src="@drawable/ic_launcher"
        />
    
    <TextView
        android:id="@+id/lblNomeCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgItem"
        android:layout_alignTop="@id/imgItem"
        android:layout_marginLeft="6dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TESTE"/>

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/imgItem"
        android:src="@android:drawable/ic_delete"
        android:contentDescription="@string/blabla" />

    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btnDelete"
        android:layout_alignTop="@id/btnDelete"
        android:layout_toLeftOf="@id/btnDelete"
        android:src="@android:drawable/ic_menu_edit"
        android:contentDescription="@string/blabla" />
    
   <ImageButton 
       	android:id="@+id/btnManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btnDelete"
        android:layout_alignTop="@id/btnDelete"
        android:layout_toLeftOf="@id/btnEdit"
        android:src="@android:drawable/ic_menu_manage"
        android:contentDescription="@string/blabla" />
	
</RelativeLayout>
